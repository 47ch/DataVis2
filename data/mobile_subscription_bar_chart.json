{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Mobile Cellular Subscription per 100 people",
    "width": 900,
    "height": 400,
    "data": {
        "url" : "mobile-cellular-subscriptions-per-100-people.csv"
    },
    "transform": [
        {"filter": "datum.Year == yearParam"}
      ],
    "params": [
        {
          "name": "yearParam",
          "value": 2018,
          "bind": {
            "input": "range",
            "min": 2010,
            "max": 2018,
            "step": 1,
            "name": "Year: "
          }
        }
      ],
    "mark": "bar",
    "encoding": {
      
      "y": {"field": "Country", "type": "nominal", "title": "Country"},
      "x": {"field": "Subscription", "type": "quantitative", "title": "Subscription per 100 people", "scale": {"domain": [0,300]}},
    "tooltip" : [ 
            { "field" :  "Country" ,  "type" :  "nominal" }, 
            { "field" : "Year" , "type" : "quantitative"},
            { "field" : "Subscription", "type" : "quantitative"}
        ], 
        "color"  : { 
            "field"  :   "Country"  , 
            "type"  :   "nominal"  , 
            "scale"  : { 
                "domain"  : [ 
                "South Korea",
                "Malaysia",
                "Philippines",
                "Mali",
                "Ethiopia",
                "Australia",
                "Hong Kong",
                "France"
            ], 
                "range"  : [ 
                "#e41a1c",
                "#377eb8",
                "#4daf4a",
                "#ff7f00",
                "#aa2233",
                "#a65628",
                "#f781bf",
                "#999999"
            ] 
            } 
        }, 
        "opacity"  : { 
            "value"  :  0.6
        }
    
    }
  }